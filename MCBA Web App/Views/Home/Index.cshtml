@{
    ViewData["Title"] = "MCBA: Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Most Common Bank of Australia</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">MCBA</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">About Us</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Services</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Contact</a>
                </li>
                @{
                    var isLoggedIn = Context.Session.GetInt32(nameof(Customer.CustomerID)).HasValue;
                }
                <li class="nav-item">
                    @if (isLoggedIn)
                    {
                        <a class="nav-link" asp-controller="Landing" asp-action="Index">Accounts</a>
                    }
                    else
                    {
                        <a class="nav-link" asp-controller="Login" asp-action="Login">Login</a>
                    }
                </li>
            </ul>
        </div>
    </nav>

    <!-- Jumbotron -->
    <div class="jumbotron text-center bg-primary text-white">
        <h1 class="display-4">Most Common Bank of Australia</h1>
        <p class="lead">Welcome to MCBA, your trusted banking partner.</p>
    </div>

    <!-- Main Content -->
    <div class="container">
        <div class="row mt-5">
            <!-- About Us Section -->
            <div class="col-md-4 text-center">
                <h2>About Us</h2>
                <p>MCBA has been serving Australians since 2024! We are dedicated to providing the best banking services.</p>
            </div>
            <!-- Services Section -->
            <div class="col-md-4 text-center">
                <h2>Our Services</h2>
                <ul class="list-unstyled">
                    <li>Personal Banking</li>
                    <li>Business Banking (Coming Soon!)</li>
                    <li>BillPay- Scheduled transactions</li>
                    <li>Loans (Coming Soon!)</li>
                    <li>Credit Cards (Coming Soon!)</li>
                    <li>Insurance (Coming Soon!)</li>
                </ul>
            </div>
            <!-- Contact Section -->
            <div class="col-md-4 text-center">
                <h2>Contact Us</h2>
                <p>Have questions? We are here to help!</p>
                <p>Email: support@mcba.com.au</p>
                <p>Phone: 1800 123 456</p>
            </div>
        </div>

        <!-- Call to Action -->
        <div class="row justify-content-center mt-4">
            <div class="col-md-6 text-center">
                @if (isLoggedIn)
                {
                    <a class="btn btn-success btn-lg" asp-controller="Landing" asp-action="Index">Go to Accounts</a>
                }
                else
                {
                    <a class="btn btn-primary btn-lg" asp-controller="Login" asp-action="Login">Login</a>
                }
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-light text-center text-lg-start mt-5">
        <div class="text-center p-3">
            © 2024 Most Common Bank of Australia:
            <a class="text-dark" href="#">mcba.com.au</a>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
