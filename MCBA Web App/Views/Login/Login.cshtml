@model Login
@{
    ViewData["Title"] = "MCBA: Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Most Common Bank of Australia</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
</head>
<body>
    <!-- Back Button -->
    <div class="container mt-3">
        <div class="row">
            <div class="col">
                <a class="btn btn-secondary" asp-controller="Landing" asp-action="Index">< Back to Home</a>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container mt-3">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header text-center">
                        <h3>Login</h3>
                    </div>
                    <div class="card-body">
                        <form asp-action="Login">
                            <div class="form-group">
                                <label asp-for="LoginID" class="control-label"></label>
                                <input asp-for="LoginID" class="form-control" />
                                <span asp-validation-for="LoginID" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="Password" class="control-label">Password</label>
                                <input id="Password" name="Password" type="password" class="form-control"
                                       data-val="true" data-val-required="The Password field is required." />
                                @Html.ValidationMessage("Password", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Login" class="btn btn-primary" />
                            </div>
                            @Html.ValidationMessage("LoginFailed", new { @class = "text-danger" })
                        </form>
                    </div>
                    <div class="card-footer text-center">
                        <a href="#">Forgot your password?</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

