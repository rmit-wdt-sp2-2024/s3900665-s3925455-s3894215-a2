@model MCBA_Web_App.Models.BillPay

@{
    ViewData["Title"] = "Delete Bill Pay";
}

<h1>Delete Bill Pay</h1>

<h3>Are you sure you want to delete this bill pay?</h3>

<div>
    <h4>BillPay</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Account Number
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccountNumber)
        </dd>
        <dt class="col-sm-2">
            Payee ID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PayeeID)
        </dd>
        <dt class="col-sm-2">
            Amount
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt class="col-sm-2">
            Schedule Time
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ScheduleTimeUtc)
        </dd>
        <dt class="col-sm-2">
            Period
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Period)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="BillPayID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
